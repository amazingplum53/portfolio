FROM ubuntu:latest

SHELL ["/bin/bash", "-c"]

RUN apt update 

RUN apt-get update

ENV BASEDIR="/var/www" 

RUN apt-get -y install git python3-pip awscli jq dnsutils

RUN mkdir $BASEDIR/

RUN git clone https://github.com/amazingplum53/portfolio.git $BASEDIR/portfolio

WORKDIR $BASEDIR/portfolio

# Configure secrets

ARG settings=local

RUN echo "[default]" > /root/.aws/credentials

RUN --mount=type=secret,id=env,dst=$BASEDIR/portfolio/conf \
    cat conf/portfolio.env | jq "aws_access_key_id=.aws_access_key_id \n aws_secret_access_key=.aws_secret_access_key" >> /root/.aws/credentials

RUN aws configure

# Configure Project


RUN python3 -m pip install -r portfolio/conf/requirements.txt

ENV RUN_COMMAND="gunicorn portfolio.wsgi --chdir $BASEDIR/portfolio -c $BASEDIR/portfolio/conf/gunicorn/gunicorn.config.py"

RUN echo 'alias run="$RUN_COMMAND"' >> ~/.bashrc

EXPOSE 8000

COPY portfolio.env conf/

ENTRYPOINT ["bash", "-c"]

CMD ["$RUN_COMMAND"]
